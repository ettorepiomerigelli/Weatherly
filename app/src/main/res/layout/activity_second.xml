<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/defaultBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@color/black"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/buttonColor"
        app:navigationIcon="?attr/homeAsUpIndicator"/>

    <!-- CardView per mappa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMap"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white"
        android:padding="8dp">

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <!-- CardView per foto ricordo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMemoryPhoto"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/cardMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Titolo -->
            <TextView
                android:id="@+id/photoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scatta un ricordo di questa giornata"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"/>

            <!-- ImageView per foto ricordo -->
            <ImageView
                android:id="@+id/photoMemoryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:padding="4dp"
                android:clipToOutline="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottone aggiungi/cambia foto -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiungi / Cambia foto"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardMemoryPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/buttonColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>
